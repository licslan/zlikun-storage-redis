<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<!-- 输出到控制台 -->
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder charset="UTF-8">
			<pattern>%d{HH:mm:ss.sss} %level %thread %logger %msg%n</pattern>
		</encoder>
	</appender>
	
	<!-- 默认输出到控制台 -->
	<root level="INFO">
		<appender-ref ref="STDOUT" />
	</root>

</configuration>